<div class="d-flex justify-content-center mt-4 pt-4 pb-4" >
  <form method="POST" class="w-50">
    <div class="form-group">
      <label for="exampleInputEmail1">User Name</label>
      <input type="text" class="form-control" name="username" value='{{#if signed.user}}{{signed.user}}{{/if}}'placeholder="User name">
      {{#if errName}}
      <p class="text-danger">{{errName}}</p>
      {{/if}}
    </div>
     <div class="form-group">
      <label for="exampleInputEmail1">Email address</label>
      <input type="text" class="form-control" name="email" value='{{#if signed.email}}{{signed.email}}{{/if}}' placeholder="Enter email">
      {{#if errEmail}}
      <p class="text-danger">{{errEmail}}</p>
      {{/if}}
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input type="password" class="form-control" name="password" value='{{#if signed.password}}{{signed.password}}{{/if}}' placeholder="Password">
      {{#if errPassword}}
      <p class="text-danger">{{errPassword}}</p>
      {{/if}}
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
  </form>
</div>